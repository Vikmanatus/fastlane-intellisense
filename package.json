{
  "name": "fastlane-intellisense",
  "description": "A language server example",
  "author": "Microsoft Corporation",
  "license": "MIT",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Microsoft/vscode-extension-samples"
  },
  "publisher": "vscode-samples",
  "categories": [],
  "keywords": [
    "multi-root ready"
  ],
  "engines": {
    "vscode": "^1.74.0"
  },
  "capabilities": {
    "hoverProvider": "true"
  },
  "activationEvents": [
    "onLanguage:ruby",
    "onCommand:fastlane-intellisense.setupConfig"
  ],
  "main": "./dist/client/src/extension",
  "contributes": {
    "commands": [
      {
        "command": "fastlane-intellisense.setupConfig",
        "title": "fastlane-intellisense: Setup required configuration"
      },
      {
        "command": "fastlane-intellisense.openTextDoc",
        "title": "fastlane-intellisense: Open text document"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Example configuration",
      "properties": {
        "languageServerExample.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "languageServerExample.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "lint": "eslint ./src/client ./src/server ./src/shared --ext .ts,.tsx",
    "test": "sh ./scripts/e2e.sh",
    "webpack": "webpack --mode development",
    "webpack-dev": "webpack --mode development --watch"
  },
  "dependencies": {
    "vscode-languageclient": "^7.0.0",
    "vscode-languageserver": "^7.0.0",
    "vscode-languageserver-textdocument": "^1.0.4"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^16.11.7",
    "@types/vscode": "^1.63.0",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "@vscode/test-electron": "^2.1.2",
    "eslint": "^8.26.0",
    "glob": "^10.2.2",
    "mocha": "^9.2.1",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.4",
    "webpack": "^5.81.0",
    "webpack-cli": "^5.0.2"
  }
}
